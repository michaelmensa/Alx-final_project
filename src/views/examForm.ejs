<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Examination</title>
</head>
<body>
    <div class="container">
        <div class="patient-details" id="patient-details">
            <span><%= PatientID %></span>
            <span><%= Name %></span>
            <span><%= Age %></span>
            <span><%= Gender %></span>
            <span><%= Occupation %></span>
            <span><%= Contact %></span>
        </div>
        <form action="" method="POST" id="examForm">
            <!-- Hidden input fields for patient details -->
            <input type="hidden" id="patientID" name="patientID" value="<%= Id %>">
            <label for="examination">Examination:</label>
            <textarea id="examination" name="examination" rows="10" cols="50" required></textarea>
      
            <button type="submit">Submit</button>
        </form>
    </div>
    <script>
       // Set form action URL dynamically
        const form = document.getElementById('examForm');
        const patientId = form.getElementById('patientID').value;
        form.action = `/patients/${patientId}`;
    </script>
</body>
</html>